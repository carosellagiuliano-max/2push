# ===========================================
# SCHNITTWERK Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to version control!

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Supabase
# ===========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key - NEVER expose to client!
# Used only in server-side code and Edge Functions
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Stripe
# ===========================================
# Get these from Stripe Dashboard > Developers > API keys
# Use TEST keys for development!
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key

# Webhook signing secret from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# ===========================================
# Email (Resend)
# ===========================================
# Get this from resend.com dashboard
RESEND_API_KEY=re_your-key

# Email sender address (must be verified in Resend)
EMAIL_FROM=noreply@schnittwerk.ch

# ===========================================
# Optional: Error Tracking
# ===========================================
# SENTRY_DSN=https://your-dsn@sentry.io/project
# SENTRY_AUTH_TOKEN=your-auth-token

# ===========================================
# Optional: Analytics
# ===========================================
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
